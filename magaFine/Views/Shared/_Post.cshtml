@Styles.Render("~/Content/CSS/posts.css")
@Styles.Render("~/Content/css")
@model List<magaFine.Models.articles>
@{
    Layout = null;
}

<div class="posts">
    <div class="postContainer" style="position: relative;">
        <div class="postWrapper">
            @foreach (var article in Model)
            {
                <div class="post">
                    <div class="cover"><img src="@(!string.IsNullOrEmpty(article.cover) ? @article.cover : "https://i.imgur.com/UpDiNmi.jpeg")"></div>
                    <div class="info">
                        <div class="type">@article.category</div>
                        <a href="@Url.Action("Index", "Article", new { id = article.Id })">
                            <div class="title">@article.title</div>
                        </a>
                        <div class="authorNdate">
                            <div class="author">Fiona</div>
                            <div class="date">2024-09-02</div>
                        </div>
                        <div class="content">
                            <p></p>@article.content.Substring(0,65)...
                        </div>
                    </div>
                </div>
            }
            <div class="mask"
                 style="display: none; width: 100%; height: 100%; background: rgba(255, 255, 255, 0.57); position: absolute;">
            </div>
        </div>
    </div>
</div>